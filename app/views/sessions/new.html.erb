<h1>Log In</h1>

<%= form_for @user do |f| %>
     
<%=link_to "Login via Facebook", "/auth/facebook" %>
  
<br></br>

  <div class="box">
          <%= f.label :name %><br />
          <%= f.text_field :name, validate: true %>
  </div>
  <div class="box">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", value: "" %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %>
<%end%>

