<h1>Log In</h1>

<%=link_to "Login via Facebook", "/auth/facebook" %>
  
<br></br>

<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

<div class="form-group">

          <%= f.label :name %><br />
          <%= f.text_field :name %>
          </div>
          
          <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password%>
          </div>
          
  <%= f.submit "Log In" %>
<%end%>