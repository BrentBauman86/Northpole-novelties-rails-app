<h1>Sign Up</h1>

<%= form_for @user do |f| %>

      <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>
      
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
      </div>
      <br>

      <div class="form-group">
      <p> Password must be at least 5 characters <p>
      </div>

      <%= f.label :admin, "Check box if you are Santa" %>
      <%= f.check_box :admin %>

      <br>
    <div class="actions"><%= f.submit "Sign Up" %></div>
  <%end%>
