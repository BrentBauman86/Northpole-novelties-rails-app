<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
    <div class='center'>
      <div class="error_messages">
        <h2>Form is invalid</h2>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      </div>
      <%end%>

      <div class="form-horizontal">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>
      <br>
    <div class="form-horizontal">
    <%= f.label :work_ethic %>
    <%= f.text_field :work_ethic %>
    </div>
    <br>
    <div class="form-horizontal">
    <%= f.label :admin, "Check box if you are Santa" %>
    <%= f.check_box :admin, class: "form-check-input" %>
  </div>
  <br>
  <div class="form-horizontal">
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <br>
  <div class="actions"><%= f.submit "Sign Up" %></div>
    <%end%>
  <br>
