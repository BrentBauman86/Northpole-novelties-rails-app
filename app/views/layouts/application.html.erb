<!DOCTYPE html>
<html>
  <head>
    <title>NorthpoleNoveltiesRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

  <body>
  <div class="corners">
    <div align='center'>
      <div id="user_header">
    <% if current_user %>
      Logged in as <%= current_user.name %>
      <%= link_to "Log Out", logout_path, class: 'link-to-color' %>
      </div>
      <%else%>
      <%= link_to "Sign Up", signup_path, class: 'link-to-color' %>
        or
      <%= link_to "Log In", login_path, class: 'link-to-color' %>
      <%end%>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>

